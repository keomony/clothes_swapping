<div class="container">
  <p id="notice"><%= notice %></p>
  <% if @swaps.any? %>
    <div class="col-lg-12">
      <h1 class="page-header">Swaps</h1>
    </div>
    <% @swaps.each do |swap| %>
    <div class="row">
      <div class="container">
        <!-- <div class="col-lg-3 col-md-4 col-xs-6 thumb"> -->
          <div class="col-lg-6">
            <div class="panel panel-default">
            <% item = Item.find(Selector.find(swap.selector_id).item_id) %>
            <div class="panel-body">
              <%= image_tag(item.image.url(:square), :alt => item.description, :class => "img-responsive") %>
            </div>
            <div class="panel-footer">
              <h3 class="panel-title"><%= item.user.email %></h3>
            </div>

          </div>
          </div>
          <div class="col-lg-6">
            <div class="panel panel-default">
            <% item = Item.find(Requester.find(swap.requester_id).item_id)%>

            <div class="panel-body">
              <%= image_tag(item.image.url(:square), :alt => item.description, :class => "img-responsive") %>
            </div>
            <div class="panel-footer">
              <h3 class="panel-title"><%= item.user.email %></h3>
            </div>
          </div>
          </div>
        <!-- </div> -->

      </div>
    </div>
    <% end %>
  <% else %>
    No swaps yet
  <% end %>
</div>
