<div class="container">
  <p id="notice"><%= notice %></p>
  <h2><%= @item.description %></h2>
  <div class="well bs-component row">
    <div class="col-lg-6">
      <%= image_tag @item.image.url(:medium) %>
    </div>
  <div class="col-lg-6" >
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Size</h3>
      </div>
      <div class="panel-body">
        <%= @item.size %>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Color</h3>
      </div>
      <div class="panel-body">
        <%= @item.color %>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Category</h3>
      </div>
      <div class="panel-body">
        <%= @item.category %>
      </div>
    </div>
  </div>

  <% if current_user %>
    <% if @item.user_id == current_user.id  %>
      <%= link_to 'Edit', edit_item_path(@item) %>
      <%= link_to 'Destroy', @item, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% else %>
      <form action="/items/<%= @item.id %>/requesters" method ='POST' name='requester'>
        <input type='hidden' name='item_id' value="<%= @item.id %>" >
        <input type='submit' value='Request' class="btn btn-success">
      </form>
    <% end %>
  <% end %>
</div>
</div>
