<!DOCTYPE html>
<html>
  <head>
    <title>ClothesSwapping</title>
    <%= csrf_meta_tags %>

    <!-- Bootstrap Core CSS -->
<%= stylesheet_link_tag "/css/bootstrap.min.css" %>

<!-- Custom CSS -->
<%= stylesheet_link_tag "/css/bootstrap.css" %>
<%= stylesheet_link_tag "/css/custom.css" %>

